<%= render 'shared/errors', obj: @user %> 

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :full_name %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :full_name, class: "form-control", placeholder: "Enter Fullname" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %> <br/>
        </div>
        <div class='col-sm-8'>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %> <br/>
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :image %> <br/>
        </div>
        <div class='col-sm-8'>
          <%= f.file_field :image, class: "form-control", placeholder: "Enter email", autofocus: true  %>
        </div>
      </div>
      <div class="form-group">
        <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit(@user.new_record? ? "Let's get started!": 'Rejuvenate My Profile!', class: 'btn btn-primary btn-lg') %>
        </div>
      </div>

    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to Projects List", projects_path %> ]
    </div>
  </div>
</div>