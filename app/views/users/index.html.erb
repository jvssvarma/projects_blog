<h1 align="center"> All Projects Blog Users </h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row center">
        <div class="well col-md-4 col-md-offset-4">
          <div class='round-image-50'>
            <li><%= link_to image_tag(user.image.url), user_path(user) %></li>
          </div>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
          <li><small><%= pluralize(user.projects.count, "project") if user.projects %></small></li>
          <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete User", user_path(user), method: :delete,
                 data: {confirm: "Are you sure you want to delete #{user.username}'s profile and projects?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>

